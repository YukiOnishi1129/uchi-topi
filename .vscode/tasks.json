{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$swiftc"]
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "make run",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": ["Build"]
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make clean",
      "group": "build"
    },
    {
      "label": "Test",
      "type": "shell", 
      "command": "make test",
      "group": "test"
    },
    {
      "label": "Launch Simulator",
      "type": "shell",
      "command": "make simulator",
      "group": "none"
    },
    {
      "label": "Take Screenshot",
      "type": "shell",
      "command": "make screenshot",
      "group": "none"
    },
    {
      "label": "Show Logs",
      "type": "shell",
      "command": "make logs",
      "group": "none",
      "isBackground": true
    }
  ]
}